{
  "compilerOptions": {
    "outDir": "lib/",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2015",
    "jsx": "react",
    "lib": ["es2019", "dom"],
    "types": ["@webgpu/types"],
    "baseUrl": "./src/",
    "verbatimModuleSyntax": false
  },
  "include": ["./src/*"]
}
